---
import Layout from "../../layouts/Layout.astro";
import MarkdownPostHeaderLayout from "../../layouts/MarkdownPostHeaderLayout.astro";

const headerTitle = "Tag Index"
const allPosts = await Astro.glob('../content/*.md');
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];

---

<Layout title={headerTitle}>
  <MarkdownPostHeaderLayout headerTitle={headerTitle} />
  <div class='flex flex-wrap gap-4 text-xs pt-10'>
    {tags.map((tag) => (
      <p><a href={`/tags/${tag}`} class='border px-[1em] py-[.5em] rounded-3xl hover:bg-neutral-200 dark:hover:bg-neutral-800'>{tag}</a></p>
    ))}
  </div>
</Layout>